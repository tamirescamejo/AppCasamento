<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_rosa_claro">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_rosa_claro">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="@dimen/width_100"
            android:layout_height="@dimen/heigth_100"
            android:layout_marginTop="@dimen/margin_28"
            android:contentDescription="@string/logo_do_fornecedor"
            android:scaleType="centerCrop"
            android:src="@drawable/ruthbolo"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tvFornecedorName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_16"
            android:textAlignment="center"
            android:textColor="@color/color_rosa_escuro"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView"
            tools:text="Ruth Pessoa Bolos e Arranjos" />

        <TextView
            android:id="@+id/tvFornecedorDescricao"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_16"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            android:textAlignment="center"
            android:textColor="@color/color_rosa_escuro"
            app:layout_constraintTop_toBottomOf="@+id/tvFornecedorName"
            tools:text="Loja de locação e fornecimento de artigos para festas" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>